<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<%= form_tag articles_path, method: :get, role: 'search' do %>
  <%= text_field_tag :q, params[:q], placeholder: 'Search Article ...' %>
  <%= submit_tag 'Search' %>
<% end %>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
  <% end %>
</div>

